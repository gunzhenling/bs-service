/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size: 13px;
  color: #515151;
  overflow: hidden;
}


/*设置全局背景色  */
page {
  max-width: 100%;
  background: #f8f8f8;
}

/*模拟标题*/

.go-back-wrapper {/*返回按钮*/
  position: fixed;
  z-index: 1;
  top: 25px;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #fff;
  padding: 10rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
}
.icon-go-back {
  width: 60rpx;
  height: 60rpx;
}

.navigation {
  position: fixed;
  width: 100%;
  text-align: center;
  color: #515151;
  font-size: 16px;
  border-bottom: 2rpx solid #f8f8f8;
  height: 80rpx;
  padding-top: 30px;
  background: #fff;
}
/*去掉button默认样式  */
button::after {
  border: none;
}
button {
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  font-size: 13px;
  color: #515151;
  background: #fff;
}

