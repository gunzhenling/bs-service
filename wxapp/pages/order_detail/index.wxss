/* pages/orderlist/index.wxss */
page{
  background: #ededed;
  height: 100%;
  font-size: 28rpx;
  /* padding-bottom: 88rpx; */
  /* position: relative; */
}
.block {
  background: white;
  width: calc(100% - 80rpx);
  padding: 20rpx 40rpx!important;
  margin-top: 10rpx;
}
.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1px solid #ddd; */
  padding: 10rpx 0;
}
.goods_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_info >image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.goods_info >view {
  flex: 1;
  font-size: 22rpx;
  margin-bottom: 5rpx;
}
.goods_info >view>view:first-child {
  font-size: 28rpx;
  margin-bottom: 15rpx;
}



.list{
  width: 100%;
  margin: 16rpx auto 0;
  background: #ffffff;
  overflow: hidden;
}
.nameAndTel{
  width: 92%;
  margin: 32rpx auto 0;
  height: 28rpx;
  display: flex;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: bold;
  color:#333333;
}
.tel{
  margin-left: 60rpx;
}
.addr{
  width: 92%;
  height: 24rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 24rpx;
  margin: 20rpx auto 0;
  padding-bottom: 32rpx;
}
