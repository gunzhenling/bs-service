/* pages/noticelist/index.wxss */
page{
  background: #ededed;
}
.introduce{
  width:100%;
  height: 90rpx;
  margin: 16rpx auto;
  border-radius: 8rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
}
.introduce_title{
  width: 220rpx;
  height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 90rpx;
  margin-left: 30rpx;
  color: #333333;
}
.open{
  width: 90rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  text-align: center;
  color: #999999;
  font-weight: bold;
}
.close{
  width: 90rpx;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  text-align: center;
  color: #999999;
  font-weight: bold;
  margin-right: 20rpx;
}
.introduces{
  width:100%;
  height: auto;
  margin: 16rpx auto;
  border-radius: 8rpx;
  background: #ffffff;
  position: relative;
}
.introduces_head{
  width:100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.introduce_titles{
  width: 220rpx;
  height: 90rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 90rpx;
  margin-left: 30rpx;
  color: #333333;
  border-bottom: 2px solid #3d4663
}
.hr{
  width:92%;
  height: 2rpx;
  background: #e6e6e6;
  position: absolute;
  top: 92rpx;
  left:0;
  right: 0;
  margin: auto;
}
.introduces_content{
  width: 92%;
  padding: 20rpx 24rpx 0 24rpx;
  margin:auto;
}
text{
  font-size: 24rpx;
  line-height: 44rpx;
  display: block;
  color:#999999;
}
.list{
  width: 100%;
  height: 84rpx;
  margin: 20rpx auto 0;
  border-top: 2rpx solid #e6e6e6;
  font-size: 24rpx;
  line-height: 84rpx;
  color:#999999;
}
.rexian{
  width: 100%;
  height: 88rpx;
  bottom: 0;
  left: 0
}
.tel{
  width: 100%;
  height: 88rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  text-align: center;
  color: #666666
}
.kefu{
  width: 200rpx;
  height: 54rpx;
  background: #aaaaaa;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  position: fixed;
  bottom:20rpx;
  right: 0;
  display: flex;
  justify-content: space-around
}
.kufu_pic{
  width: 32rpx;
  height: 34rpx;
  display: block;
  margin: 10rpx 0 0 26rpx;
}
.kefu_describe{
  width: 102rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  color:#ededed;
}