<!--index.wxml-->
<view class="container">
  <!--轮播图-->
  <swiper class="swiper-wrapper" autoplay="true" circular="true" indicator-dots="true" indicator-color="#fff" indicator-active-color="#FFA042">
      <swiper-item class="swiper-item" wx:for="{{slides}}" wx:key="*this">
        <image class="slider-image" src="{{item}}" mode="widthFix"></image>
      </swiper-item>
  </swiper>
  <!--导航按钮-->
  <view class="nav-btn-list">
    <view bindtap='goNoticeList' class="btn-item">
      <image src="../../images/icon-gonggao.png"></image>
      <text>公告</text>
    </view>
    <view bindtap='goDingZhiList' class="btn-item">
      <image src="../../images/icon-lipin.png"></image>
      <text>礼品定制</text>
    </view>
    <view class="btn-item contact_btn">
      <image src="../../images/icon-kefu.png"></image>
      <text>客服</text>
      <button open-type="contact"></button>
    </view>
    <view bindtap='goHelpList' class="btn-item">
      <image src="../../images/column.png"></image>
      <text>操作指南</text>
    </view>
  </view>
  <!--精选专题-->
  <view class="special-topic-wrapper">
    <view class="topic-header" bindtap="goDingZhiList">
      <text>最新定制</text>
      <image class="icon-right" src="../../images/right_arrow_circle.png" style="width:30rpx;height:30rpx;"></image>
    </view>
    <view class="scroll-wrapper">
      <scroll-view scroll-x>
        <view class="topic-item" wx:for="{{topicList}}" wx:key="{{index}}" bindtap="goDetailDZ" data-item="{{item}}">
          <image class="topic-img" src="{{item.pic}}"></image>
          <view class="topic-item-info">
            <text class="topic-item-title">{{item.gift_name}}</text>
            <text class="topic-item-price">￥{{item.real_gift_price}}</text>
          </view>
          <text class="topic-item-sub-title">{{item.subTitle}}</text>
        </view>
      </scroll-view>
    </view>
  </view>
  <!--礼品列表-->
  <view class="bargain-wrapper">

    <view class="bargain-item" wx:for="{{bargainList}}" wx:key="*this" bindtap="goDetail" data-item="{{item}}">
      <image class="bargain-img" src="{{item.pic}}"></image>
      <view class="bargain-info">
        <view class="info-header">
          <text class="title">{{item.gift_name}}</text>
          <text class="desc">{{item.desc}}</text>
        </view>
        <view class="info-price">
          <view class="base-price">
            <text class="money">￥{{item.real_gift_price}}</text>
            <text>现价</text>
          </view>
          <view class="original-price">
            <text>￥{{item.gift_price}}</text>
            <text>原价</text>
          </view>
          <view class="limit">
            <text>{{item.sale_num}}</text>
            <text>已售</text>
          </view>
        </view>

      </view>
    </view>
  </view>

  <!--到底提示-->
  <view class="bottom-tip">
    <text>到底了，再往上逛逛吧~</text>
  </view>
</view>
