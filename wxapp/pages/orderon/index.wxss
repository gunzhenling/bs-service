/* pages/helplist/index.wxss */
page{
  background: #ededed;
}

.container {
  padding-top: 140rpx;
}

.list{
  width: 100%;
  margin: 16rpx auto 0;
  background: #ffffff;
  overflow: hidden;
}
.nameAndTel{
  width: 92%;
  margin: 32rpx auto 0;
  height: 28rpx;
  display: flex;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: bold;
  color:#333333;
}
.tel{
  margin-left: 60rpx;
}
.addr{
  width: 92%;
  height: 24rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 24rpx;
  margin: 20rpx auto 0;
  padding-bottom: 32rpx;
}

.content {
  background-color: white;
  width: 100%;
  margin-top: 20rpx;
}

.content >view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 60rpx;
  border-bottom: 1rpx solid #ddd;
}
.content >view:last-child {
  border-bottom: 0;
}
.content image {
  width: 100rpx;
  height: 100rpx;
}


.confirm{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  font-size: 28rpx;
  line-height: 98rpx;
  text-align: center;
  background: #ed3f14;
  color: #ffffff;
  border-radius: 0;
  padding: 0!important;
}
