/* pages/orderlist/index.wxss */
page{
  background: #ededed;
  height: 100%;
  /* padding-bottom: 88rpx; */
  /* position: relative; */
}
.swiper-tab{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  /* margin-top: 2rpx; */
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  z-index: 999;
}
.kong{
  width: 100%;
  height: 90rpx;
}
.kong2{
  width: 100%;
  height: 176rpx;
}
.tab-item{
  width: 25%;
  height: 100%;
  font-size: 24rpx;
  font-weight: bold;
  color: #999999;
}
.active{
  color: #3d4663;
  border-bottom: 2rpx solid #3d4663;
}
.show{
  display: block;
}
.hidden{
  display: none;
  padding-top:4rem;
}
.list{
  width: 94%;
  /* height: 248rpx; */
  margin: 16rpx auto;
  background: #ffffff;
  border-radius: 8rpx;
}

.order_title {
  font-size:28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd;
  padding: 20rpx 0;
  padding-left: 20rpx;
}
.state{
  width: 120rpx;
  /* height: 54rpx; */
  background: red;
  font-size: 22rpx;
  padding: 10rpx 5rpx;
  /* line-height: 54rpx; */
  text-align: center;
  color:#ffffff;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  /* margin-top: 34rpx; */
}
.loadBtn{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 15rpx;
  border-top: 1px solid #ddd;
}

.time {
  float: left;
  font-size: 22rpx;
  flex: 1;
}
.loadBtn >view {
  width: 140rpx;
  height: 50rpx;
  display: block;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  border:1rpx solid #e6e6e6;
  margin-left:10rpx;
}
.tel{
  width: 100%;
  height: 88rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  text-align: center;
  color: #666666
}
.kefu{
  width: 200rpx;
  /* height: 54rpx; */
  background: #aaaaaa;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  position: fixed;
  bottom:20rpx;
  right: 0;
  display: flex;
  justify-content: space-around
}
.kufu_pic{
  width: 32rpx;
  height: 34rpx;
  display: block;
  margin: 10rpx 0 0 26rpx;
}
.kefu_describe{
  width: 102rpx;
  /* height: 54rpx; */
  font-size: 24rpx;
  /* line-height: 54rpx; */
  color:#ededed;
}
.guanli{
  position: fixed;
  top:88rpx;
  left: 0;
  width: 100%;
  height: 86rpx;
  background: #ffffff;
  z-index: 999;
}
.guanliMain{
  width: 94%;
  height: 86rpx;
  margin: auto;
  /* display: flex;
  justify-content: space-between; */
  overflow: hidden;
}
.checkbox_all{
  font-size: 24rpx;
  color: #333333;
  line-height: 86rpx;
  float: left;
}
.guanli_btn{
  width: 88rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  line-height: 24rpx;
  margin-top: 28rpx;
  float: right;
}
.guanli_pic{
  width: 22rpx;
  height: 24rpx;
}
.guanli_word{
  font-size: 24rpx;
  color: #3d4663;
}
.checkbox_list{
  display: flex;
}
checkbox .wx-checkbox-input{
  border-radius: 3rpx;
  height: 26rpx;
  width: 26rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  background: #3d4663;
  color: #ffffff;
  border: none;
}
.checkbox{
  margin: 106rpx 20rpx 0 24rpx;
}
.on{
  display: block
}
.none{display: none}
.huishou{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 78rpx;
  background: #ffffff;
  border-top: 2rpx solid #dbdbdb;
  z-index: 9;
}
.huishouBtn{
  width: 196rpx;
  height: 78rpx;
  font-size: 22rpx;
  color: #ffffff;
  background: #3d4663;
  border-radius: 0;
  text-align: center;
  line-height: 78rpx;
  float: right;
}


/*到底提示*/
.bottom-tip {
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #707070;
  font-size: 12px;
}


.block {
  background: white;
  width: calc(100% - 80rpx);
  padding: 20rpx 40rpx!important;
  margin-top: 10rpx;
  font-size: 26rpx;
}
.cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1px solid #ddd; */
  padding: 5rpx 0;
}
.goods_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods_info >image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.goods_info >view {
  flex: 1;
  font-size: 20rpx;
  margin-bottom: 5rpx;
}
.goods_info >view>view:first-child {
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
