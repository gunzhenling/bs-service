<!--pages/orderlist/index.wxml-->

<view class="swiper-tab" style="">
	<view class="tab-item {{current == 1?'active':''}} " bindtap="changeTab" data-index="{{1}}">待付款</view>
	<view class="tab-item {{current == 2?'active':''}}" bindtap="changeTab" data-index="{{2}}">待发货</view>
	<view class="tab-item {{current == 3?'active':''}}" bindtap="changeTab" data-index="{{3}}">待收货</view>
	<view class="tab-item {{current == 4?'active':''}}" bindtap="changeTab" data-index="{{4}}">已完成</view>
</view>
<view class='tab-items'>
	<view class='kong {{kong2?"kong2":""}}'></view>
	<view>
		<view class='list' wx:for="{{loadList}}" wx:for-item="item" wx:key='id'>
			<view class='list_top'>
				<view class='numAndTime'>
					<image class='numPic' src='{{item.pic}}'></image>
					<view class='numInfo'>
						<view class='num'>订单编号:{{item._order_no}}</view>
						<view class='time'>创建时间:{{item.create_time}}</view>
					</view>
				</view>
				<view class='state'wx:if="{{current == 1}}">待付款</view>
				<view class='state'wx:if="{{current == 2}}">待发货</view>
				<view class='state'wx:if="{{current == 3}}">待收货</view>
				<!-- <view class='state'wx:if="{{current == 4}}">已完成</view> -->
			</view>
			<view class='loadBtn'>
				<view class='see_btn' data-item="{{item}}" bindtap='loadDetails'>详情</view>
				<view class='extend_btn' data-item="{{item}}" bindtap='pay' wx:if="{{current == 1}}">余额支付</view>
        <view class='extend_btn' data-item="{{item}}" bindtap='cancel' wx:if="{{current == 1}}">取消</view>
				<view class='extend_btn' data-item="{{item}}" bindtap='receive' wx:if="{{current == 3}}">确认收货</view>
			</view>
		</view>
	</view>
</view>

<!--到底提示-->
<view class="bottom-tip">
	<text>到底了，再往上逛逛吧~</text>
</view>
